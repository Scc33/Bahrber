<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    tools:context=".FormScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:text="@string/submit"
                android:textSize="@dimen/small"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayoutHairType"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/formTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/form_title"
                android:textAllCaps="false"
                android:textSize="@dimen/medium"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayoutHairType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayoutThickness">

                <TextView
                    android:id="@+id/hairType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hair_type"
                    android:textSize="@dimen/small_plus"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/hairTypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="563dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hairType">

                    <LinearLayout
                        android:id="@+id/hairType1Layout"
                        android:layout_width="match_parent"
                        android:layout_height="114dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <Button
                            android:id="@+id/button1a"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:text="@string/_1a"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/button1b"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/_1b"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/button1c"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:text="@string/_1c"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hairType2Layout"
                        android:layout_width="match_parent"
                        android:layout_height="114dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hairType1Layout">

                        <Button
                            android:id="@+id/button2a"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:text="@string/_2a"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/button2b"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:text="@string/_2b"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/button2c"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/_2c"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hairType3Layout"
                        android:layout_width="match_parent"
                        android:layout_height="114dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hairType2Layout">

                        <Button
                            android:id="@+id/button3a"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/_3a"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/button3b"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:text="@string/_3b"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/button3c"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:text="@string/_3c"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hairType4Layout"
                        android:layout_width="match_parent"
                        android:layout_height="114dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hairType3Layout">

                        <Button
                            android:id="@+id/button4a"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:text="@string/_4a"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/button4b"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/_4b"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/button4c"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:text="@string/_4c"
                            android:textColor="@color/formTextColor"
                            android:textSize="@dimen/medium"
                            android:typeface="sans" />

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

                <Button
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.941"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayoutLength"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_marginTop="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/formTitle">

                <TextView
                    android:id="@+id/length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desired_length"
                    android:textSize="@dimen/small_plus"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/lengthLayout"
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/length">

                    <Button
                        android:id="@+id/buttonShort"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="@string/shortLength"
                        android:textColor="@color/formTextColor"
                        android:textSize="@dimen/small_plus"
                        android:typeface="sans" />

                    <Button
                        android:id="@+id/buttonMediumLength"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:text="@string/mediumLength"
                        android:textColor="@color/formTextColor"
                        android:textSize="@dimen/small_plus"
                        android:typeface="sans" />

                    <Button
                        android:id="@+id/buttonLong"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="@string/longLength"
                        android:textColor="@color/formTextColor"
                        android:textSize="@dimen/small_plus"
                        android:typeface="sans" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayoutThickness"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayoutLength">

                <TextView
                    android:id="@+id/thickness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thickness"
                    android:textSize="@dimen/small_plus"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/thicknessLayout"
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/thickness">

                    <Button
                        android:id="@+id/buttonFine"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="@string/fine"
                        android:textColor="@color/formTextColor"
                        android:textSize="@dimen/small_plus"
                        android:typeface="sans" />

                    <Button
                        android:id="@+id/buttonMediumThickness"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:text="@string/mediumThickness"
                        android:textColor="@color/formTextColor"
                        android:textSize="@dimen/small_plus"
                        android:typeface="sans" />

                    <Button
                        android:id="@+id/buttonCoarse"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="@string/coarse"
                        android:textColor="@color/formTextColor"
                        android:textSize="@dimen/small_plus"
                        android:typeface="sans" />
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:layout_marginTop="68dp"
                android:gravity="center"
                android:text="@string/directions"
                android:textSize="@dimen/small"
                android:typeface="sans"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>